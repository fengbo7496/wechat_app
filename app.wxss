/**app.wxss**/
.container {
  flex: 1;
  display: flex;
  flex-direction: column;
} 

page{
  height: 100%;
}

.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 100%;
}


.loading-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

.item-view{
    padding: 10px;
    display: flex;
    flex-direction: column;
    border-top: 1px solid #DEDEDE;
    border-left: 1px solid #DEDEDE;
    box-shadow: 2px 2px 2px #C7C7C7;
    margin: 10px;
    border-radius: 5px;
}

.item-view .content{
    color: black;
}

.item-view .date{
    color: grey;
    margin-top: 10px;
}

.item-view image{
    width: 100%;
    height: 400rpx;
    margin-top: 10px;
}
